package portfolio;

//Program that simulates a stock market and stock portfolio

import java.util.*;

public class Portfolio {
	static Scanner input = new Scanner(System.in);
	static double OverallMoney = 10000;
	static double buyShares, sellShares, YourMoney, sharesLeft;

	public static void main(String[] args) throws InterruptedException {
		welcome();
		Trading.createStock();
		Trading.money();
		BeatTheCrash.dialouge();
		BeatTheCrash.intro();
		BeatTheCrash.game();
		MiniGames.miniGame();
		finishGame();

	}

	// Creating welcome message, with delayed prompt
	private static void welcome() throws InterruptedException {
		System.out.println("Welcome to your Stock Market Portfolio");
		Thread.sleep(1500);
		System.out.println("The program simulates the stock market, where you get to create your own portfolio");
		Thread.sleep(2000);
		System.out.println("There is a whole bunch of mini games to play");
		Thread.sleep(1250);
		System.out.println("With the goal of increasing your 'Overall Money' as you go!");
		Thread.sleep(1250);
		System.out.println("The money you earn from one mini game, gets added to the overall total");
		Thread.sleep(1250);
		System.out.println("Which begins at $10, 000");
		Thread.sleep(1250);
	}

	private static void finishGame() throws InterruptedException {
		System.out.println("You have made it to the end of the game!");
		System.out.println("You finished the game with: $" + OverallMoney);
		Thread.sleep(1250);
		if (OverallMoney > 10000) {
			System.out.println("Great Job! You made money!");
			System.out.println("It'll be tough, but can you beat that score? If so, make sure to play again!");
		} else {
			System.out.println("Better luck next time! You lost money this game!");
			System.out.println("Play again, and try to beat that score!");
		}
	}
}
